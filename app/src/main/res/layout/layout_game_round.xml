<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="data"
            type="com.example.photograd.android.home.games.data.model.Game" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/img_round"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:roundImg="@{``}" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/round_game_header_bg"
            android:gravity="center"
            android:text="Ночной алматы" />

        <TextView
            android:id="@+id/tv_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/round_game_footer_bg"
            android:gravity="center"
            android:text="Раунд 1" />

    </com.google.android.material.card.MaterialCardView>
</layout>